# ============================================================================
# Terraform Variables - Example Template
# ============================================================================
# Copy this file to terraform.tfvars and fill in your actual values
# ============================================================================

# ----------------------------------------------------------------------------
# Project Configuration
# ----------------------------------------------------------------------------

project_name = "your-project-name"     # e.g., "mycompany-app"
environment  = "production"            # production, staging, or development
aws_region   = "ap-southeast-1"        # Singapore region
owner_email  = "your-email@example.com"

# ----------------------------------------------------------------------------
# Network Configuration
# ----------------------------------------------------------------------------

vpc_cidr                 = "10.0.0.0/16"
availability_zones_count = 3

# ----------------------------------------------------------------------------
# Feature Flags (for phased development)
# ----------------------------------------------------------------------------

enable_nat_gateway = false  # Set to true in Phase 2 (WARNING: Costs ~$100/month)
enable_flow_logs   = true

